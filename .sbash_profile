#!/bin/bash

# Void specific .bash_profile

appendpath () {
    case ":$PATH:" in
        *:"$1":*)
            ;;
        *)
            PATH="${PATH:+$PATH:}$1"
    esac
}
appendpath "$HOME/.distro/bin"
appendpath "$HOME/.distro/dwm-setup/dwm-statusbar"
unset appendpath

export XINITRC="$HOME/.distro/.xinitrc"

[ -z "$DISPLAY" ] && startx
